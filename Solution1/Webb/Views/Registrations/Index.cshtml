@model IEnumerable<Domain.Registration>

<h2>Регистрации</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить регистрацию</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Дата</th>
            <th>Время</th>
            <th>Клиент</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var reg in Model)
            {
                <tr>
                    <td>@reg.Date.ToShortDateString()</td>
                    <td>@reg.Time.ToShortTimeString()</td>
                    <td>@reg.Client?.FullName</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">Нет регистраций</td>
            </tr>
        }
    </tbody>
</table>
